<div id="divCashierMenuAlert">  
  
</div><!--/row-->

<div class="box">
	<div class="box-header">
		<h2><i class="fa fa-th"></i><span class="break"></span>Danh sách món ăn</h2>
	</div>
	<div class="box-content">
		<ul class="nav tab-menu nav-tabs" id="myTab">
			<% _.each(categories, function (category) { %>
				<li><a href="#cat-<%= category.id %>"><%= category.name  %></a></li>
			<% }) %>
		</ul>

		<div class="tab-content">
			<% _.each(categories, function (category) { %>
				<div class="tab-pane" id="cat-<%= category.id %>">
					<div class="row-fluid">
						<% _.each(dishes, function (dish) { %>
							<% if(dish.category.id == category.id) { %> 
								<div class="span3">
									<button id="btnDish<%= dish.id %>" onclick="cashierAddItem(<%= dish.id %>, '<%= dish.name %>', <%= dish.price %>)"><%= dish.name %></button>
								</div>
							<% } %>
						<% }) %>
					</div>					
				</div>
			<% }) %>
		</div>
	</div>
</div>

<div id="cashierMenuPage" class="row-fluid">
  	<h1>Các món đã chọn</h1>

	<div class="box span11">
		<div class="box-content">
			<table class="table">
			  	<thead>
				  	<tr>
					  	<th>Món</th>
					  	<th>Giá</th>
					  	<th>Số lượng</th>
					  	<th>Thành tiền</th>
				  	</tr>
			  	</thead>   
			  	<tbody id="cashierMenuPageTableBody">
	  		  		
			  	</tbody>
			  	<tfoot>
			  		<tr>
			  			<th colspan="3">Tổng</th>
			  			<th id="thTotal"></th>
			  			<th>&nbsp;</th>
			  		</tr>
			  	</tfoot>
		  	</table>            
		</div>
		<div class="row-fluid device-list-footer">
		  <div class="device-list-footer-right">
		    <button class="btn btn-large btn-success" data-toggle="modal" data-target="#modalCashierCheckout">Thanh toán</button>
		  </div>
		</div>
	</div>
</div>

<!-- Model Checkout -->
<div class="modal hide fade" id="modalCashierCheckout" data-backdrop="static" data-keyboard="false">
	<div class="modal-header">
		<!-- <button type="button" class="close" data-dismiss="modal">×</button> -->
		<h3>Thanh toán</h3>
	</div>
	<div class="modal-body" id="modalCashierCheckoutBody">
		<div id="modalCheckoutBodyAlert"></div>
		<table>
			<tr>
				<td>Tổng tiền</td>
				<td>
					<input type="number" id="total" readonly>
				</td>
			</tr>
			<tr>
				<td>Nhận</td>
				<td>
					<input type="number" id="receive" autofocus>
				</td>
			</tr>
			<tr>
				<td>Thối</td>
				<td>
					<input type="number" id="change" readonly>
				</td>
			</tr>
		</table>
	</div>
	<div class="modal-footer" id="modalCheckoutFooter">
		<button onclick="cashierCheckout()" class="btn btn-success">Thanh toán</button>
		<button type="button" class="btn btn-default" data-dismiss="modal">Thoát</button>
	</div>
</div>
<!-- End - Model Checkout -->