<div id="divCashierMenuAlert">  
  
</div><!--/row-->

<div class="box">
	<div class="box-header">
		<h2><i class="fa fa-th"></i><span class="break"></span></h2>
	</div>
	<div class="box-content" style="text-align: center;">
		<ul class="nav tab-menu nav-tabs" id="myTab">
			<% _.each(categories, function (category) { %>
				<li><a href="#cat-<%= category.id %>"><%= category.name  %></a></li>
			<% }) %>
		</ul>

		<div class="tab-content">
			<% _.each(categories, function (category) { %>
				<div class="tab-pane" id="cat-<%= category.id %>">
					<div class="row-fluid">
						<% if(category.id == 1) { %>
							<div class="box">
								<div class="box-header">
									<h2><i class="fa fa-th"></i><span class="break"></span></h2>
								</div>
								<div class="box-content">
									<ul class="nav tab-menu nav-tabs" id="mySubTab1">
										<% _.each(friesSubCat1s, function (friesSubCat1) { %>
											<li><a href="#subcat1-<%= friesSubCat1.id %>"><%= friesSubCat1.name  %></a></li>
										<% }) %>
									</ul>

									<div class="tab-content">
										<% _.each(friesSubCat1s, function (friesSubCat1) { %>
											<div class="tab-pane" id="subcat1-<%= friesSubCat1.id %>">
												<div class="row-fluid">
														<!-- Khoai tay -->
														<% if(friesSubCat1.id == 2) { %>
															<div class="box">
																<div class="box-header">
																	<h2><i class="fa fa-th"></i><span class="break"></span></h2>
																</div>
																<div class="box-content" style="text-align: center;">
																	<ul class="nav tab-menu nav-tabs" id="mySubTab2">
																		<% _.each(potatoDishes, function (potatoDish) { %>
																			<li><a href="#subcat2-<%= potatoDish.id %>"><%= potatoDish.name  %></a></li>
																		<% }) %>
																	</ul>

																	<div class="tab-content">
																		<% _.each(potatoDishes, function (potatoDish) { %>
																			<div class="tab-pane" id="subcat2-<%= potatoDish.id %>">
																				<div class="row-fluid">
																					<div class="row-fluid">
																						<div class="span12">
																							<div class="inline-block">
																							    <img class="menu-item-img" src="<%= potatoDish.mainImage %>">
																							</div>
																							<div class="inline-block">
																							    <%= potatoDish.name %>
																							</div>
																						</div>
																					</div>

																					<div class="row-fluid" style="margin-top: 45px;">
																						<div class="span4">
																							<button class="btn btn-large btn-primary btnDish<%= potatoDish.id %>" onclick="cashierAddItem(<%= potatoDish.id %>, '<%= potatoDish.name %>', <%= potatoDish.price %>, 'Medium')">Medium</button>	
																						</div>
																						
																						<% _.each(potatoDish.otherPrices, function (otherPrice) { %>
																							<div class="span4">
																								<button class="btn btn-large btn-primary btnDish<%= potatoDish.id %>" onclick="cashierAddItem(<%= potatoDish.id %>, '<%= potatoDish.name %>', <%= otherPrice.price %>, '<%= otherPrice.name %>')"><%= otherPrice.name %></button>
																							</div>
																						<% }) %>
																					</div>

																					<div class="row-fluid" style="margin-top: 45px;">
																						<div class="span6" style="border-right: 5px solid #000;">
																							<div class="row-fluid">
																								<div class="span16 sauce-shake-title">
																									Sốt
																								</div>
																							</div>
																							
																							<div class="row-fluid">
																								<% _.each(potatoSauces, function (potatoSauce) { %>
																									<div class="span3 btnDish<%= potatoSauce.id %>" onclick="cashierAddItem(<%= potatoSauce.id %>, '<%= potatoSauce.name %>', <%= potatoSauce.price %>, 'Medium')">
																										<div class="inline-block">
																										    <img class="menu-item-img" src="<%= potatoSauce.mainImage %>">
																										</div>
																										<div class="inline-block">
																										    <%= potatoSauce.name %>
																										</div>
																									</div>
																								<% }) %>	
																							</div>																	
																						</div>
																						<div class="span6">
																							<div class="row-fluid">
																								<div class="span16 sauce-shake-title">
																									Bột
																								</div>
																							</div>

																							<div class="row-fluid">
																								<% _.each(potatoShakes, function (potatoShake) { %>
																									<div class="span3 btnDish<%= potatoShake.id %>" onclick="cashierAddItem(<%= potatoShake.id %>, '<%= potatoShake.name %>', <%= potatoShake.price %>, 'Medium')">
																										<div class="inline-block">
																										    <img class="menu-item-img" src="<%= potatoShake.mainImage %>">
																										</div>
																										<div class="inline-block">
																										    <%= potatoShake.name %>
																										</div>
																									</div>
																								<% }) %>
																							</div>																	
																						</div>
																					</div>
																				</div>
																			</div>
																		<% }) %>
																	</div>
																</div>
															</div>															
														<% } else if(friesSubCat1.id == 3) { %> <!-- Do Chien -->
															<div class="row-fluid" style="margin-top: 20px;">
																<div class="span6" style="border-right: 5px solid #000;">
																	<div class="row-fluid">
																		<% _.each(friesDishes, function (friesDish) { %>
																			<div class="span3 btnDish<%= friesDish.id %>" onclick="cashierAddItem(<%= friesDish.id %>, '<%= friesDish.name %>', <%= friesDish.price %>, 'Medium')">
																				<div class="inline-block">
																				    <img class="menu-item-img" src="<%= friesDish.mainImage %>">
																				</div>
																				<div class="inline-block">
																				    <%= friesDish.name %>
																				</div>
																			</div>
																		<% }) %>
																	</div>
																</div>
																<div class="span6">
																	<div class="row-fluid">
																		<div class="span16 sauce-shake-title">
																			Sốt
																		</div>
																	</div>

																	<div class="row-fluid">
																		<% _.each(friesSauces, function (friesSauce) { %>
																			<div class="span3 btnDish<%= friesSauce.id %>" onclick="cashierAddItem(<%= friesSauce.id %>, '<%= friesSauce.name %>', <%= friesSauce.price %>, 'Medium')">
																				<div class="inline-block">
																				    <img class="menu-item-img" src="<%= friesSauce.mainImage %>">
																				</div>
																				<div class="inline-block">
																				    <%= friesSauce.name %>
																				</div>
																			</div>
																		<% }) %>
																	</div>
																</div>
															</div>
														<% } %>
														
												</div>
											</div>
										<% }) %>
									</div>
								</div>
							</div>
						<% } else { %>
							<% _.each(dishes, function (dish) { %>
								<% if(dish.category.id == category.id) { %>
									<div class="span3 btnDish<%= dish.id %>" onclick="cashierAddItem(<%= dish.id %>, '<%= dish.name %>', <%= dish.price %>, 'Medium')">
										<div class="inline-block">
										    <img class="menu-item-img" src="<%= dish.mainImage %>">
										</div>
										<div class="inline-block">
										    <%= dish.name %>
										</div>
									</div>
								<% } %>
							<% }) %>
						<% } %>
					</div>					
				</div>
			<% }) %>
		</div>
	</div>
</div>

<div id="cashierMenuPage" class="row-fluid">
  	<h1>Các món đã chọn</h1>

	<div class="box span11">
		<div class="box-content">
			<table class="table">
			  	<thead>
				  	<tr>
					  	<th>Món</th>
					  	<th>Giá</th>					  	
					  	<th>Số lượng</th>					  	
					  	<th>Thành tiền</th>
					  	<th>Size</th>
					  	<th>&nbsp;</th>
				  	</tr>
			  	</thead>   
			  	<tbody id="cashierMenuPageTableBody">
	  		  		
			  	</tbody>
			  	<tfoot>
			  		<tr>
			  			<th colspan="3">Tổng</th>
			  			<th id="thTotal"></th>
			  			<th>&nbsp;</th>
			  			<th>&nbsp;</th>
			  		</tr>
			  	</tfoot>
		  	</table>            
		</div>
		<div class="row-fluid device-list-footer">
		  <div class="device-list-footer-right">
		    <button class="btn btn-large btn-success" data-toggle="modal" data-target="#modalCashierCheckout">Thanh toán</button>
		  </div>
		</div>
	</div>
</div>

<!-- Model Checkout -->
<div class="modal hide fade" id="modalCashierCheckout" data-backdrop="static" data-keyboard="false">
	<div class="modal-header">
		<!-- <button type="button" class="close" data-dismiss="modal">×</button> -->
		<h3>Thanh toán</h3>
	</div>
	<div class="modal-body" id="modalCashierCheckoutBody">
		<div id="modalCheckoutBodyAlert"></div>
		<table>
			<tr>
				<td>Tổng tiền</td>
				<td>
					<input type="number" id="total" readonly>
				</td>
			</tr>
			<tr>
				<td>Nhận</td>
				<td>
					<input type="number" id="receive" autofocus>
				</td>
			</tr>
			<tr>
				<td>Thối</td>
				<td>
					<input type="number" id="change" readonly>
				</td>
			</tr>
		</table>
	</div>
	<div class="modal-footer" id="modalCheckoutFooter">
		<button onclick="cashierCheckout()" class="btn btn-success">Thanh toán</button>
		<button type="button" class="btn btn-default" data-dismiss="modal">Thoát</button>
	</div>
</div>
<!-- End - Model Checkout -->